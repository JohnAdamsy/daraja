{
  "name": "daraja",
  "version": "0.1.0",
  "description": "A NodeJS library to interact with Safaricom's Daraja M-Pesa API",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "npm run build && nyc mocha --ui tdd test/**/*.test.js",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "build": "rimraf dist && tsc",
    "prepare": "npm run build",
    "version": "git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/austinewuncler/daraja.git"
  },
  "keywords": [
    "safaricom",
    "mpesa",
    "daraja"
  ],
  "author": "Austine Were",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/austinewuncler/daraja/issues"
  },
  "homepage": "https://github.com/austinewuncler/daraja#readme",
  "devDependencies": {
    "@types/node": "^10.12.6",
    "@types/request-promise-native": "^1.0.15",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "coveralls": "^3.0.2",
    "dotenv": "^6.1.0",
    "eslint": "^5.9.0",
    "istanbul": "^0.4.5",
    "mocha": "^5.2.0",
    "nyc": "^13.1.0",
    "tslint": "^5.11.0",
    "typescript": "^3.1.6"
  },
  "dependencies": {
    "moment": "^2.22.2",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.5"
  }
